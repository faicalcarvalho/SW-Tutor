/* Exibe alguns retângulos superpostos */
programa retângulos;
inclui "gra*";
const
  X1 = 10; Y1 = 10; X2 = 300; Y2 = 300;
  DXY = 5;
var
  x1, y1, x2, y2: inteiro;
início
  /* determina o primeiro retângulo */
  x1 := X1; y1 := Y1; x2 := X2; y2 := Y2;
  
  /* desenha os vários retângulos */
  enquanto (x1 < x2)
  início
    dsn_ret(tela, x1, y1, x2, y2);
    x1 := x1 + DXY;
    y1 := y1 + DXY;
    x2 := x2 - DXY;
    y2 := y2 - DXY;
  fim;
fim.
