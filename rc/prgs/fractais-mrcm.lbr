/* Fractais obtidas através da MRCM (Multiple
   Reduction Copy Machine), conforme apresentado
   no livro "Chaos and Fractals - New Frontiers
   of Science", de Peitgen, Jürgens e Saupe */
programa fractais_mrcm;
inclui "gra*";
inclui "rgra.lbr";
inclui "qualquer_cor.lbr";

const
  NTRANSF = 5;
  DX = 300; DY = 300;

tipo
  figura = registro
    p1, p2, p3, p4: ponto; // um quadrado
  fim;

  transformação = registro
    a, b, c, d, e, f: real;
  fim;

  mrcm = registro
    n: inteiro; // número de transformações
    t: arranjo [NTRANSF] de transformação;
  fim;

/* pxy - obtém as coordenadas do ponto */
procedimento pxy(p: ponto; var x, y: inteiro);
início
  x := arredonde(p.x);
  y := arredonde(p.y);
fim;

/* dsn_fig - desenha uma figura */
procedimento dsn_fig(jan: janela; fig: figura);
var
  x1, y1, x, y: inteiro;
início
  alt_cor_caneta(jan, qualquer_cor());
  pxy(fig.p1, x1, y1);
  alt_pos_caneta(jan, x1, y1);
  pxy(fig.p2, x, y);
  dsn_lin(tela, x, y);
  pxy(fig.p3, x, y);
  dsn_lin(tela, x, y);
  pxy(fig.p4, x, y);
  dsn_lin(tela, x, y);
  dsn_lin(tela, x1, y1);
fim;

/* trans_pt - aplica a transformação corrente ao ponto p */
função trans_pt(var t: transformação; p: ponto): ponto;
var
  result: ponto;
início
  result.x := (t.a * p.x) + (t.b * p.y) + t.e; // x = ax + by + e
  result.y := (t.c * p.x) + (t.d * p.y) + t.f; // y = cx + dy + f
  retorne result;
fim;

/* trans_fig - aplica a transformação t à figura */
função trans_fig(var t: transformação; var fig: figura): figura;
var
  result: figura;
início
  /* aplica t aos pontos da figura */
  result.p1 := trans_pt(t, fig.p1);
  result.p2 := trans_pt(t, fig.p2);
  result.p3 := trans_pt(t, fig.p3);
  result.p4 := trans_pt(t, fig.p4);
  retorne result;
fim;

/* reduz - aplica na figura as transformações sucessivas */
procedimento reduz(var m: mrcm; fig: figura; n: inteiro);
var
  i: inteiro;
  faux: figura;
início
  para (i := 0; i < m.n; i++)
  início
    faux := trans_fig(m.t[i], fig);
    se (n = 0)
      dsn_fig(tela, faux)
    senão
      reduz(m, faux, n - 1);
  fim;
fim;

procedimento ini_figura(var fig: figura);
início
  fig.p1 := pto(0, 0);
  fig.p2 := pto(DX, 0);
  fig.p3 := pto(DX, DY);
  fig.p4 := pto(0, DY);
fim;

