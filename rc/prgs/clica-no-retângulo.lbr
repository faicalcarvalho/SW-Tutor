/* Clica no retângulo */
programa clica_no_retângulo;
inclui "gra*";
inclui "evnt*";

const
  X1 = 10;   Y1 = 10;
  DX = 300;  DY = 250;
  DXY = 3;

var
  x, y: inteiro;
  clicou_fora: lógico;

início
  /* desenha o retângulo grande */
  dsn_ret(tela, X1, Y1, DX, DY);

  repita
    /* aguarde o clique e obtenha as coordenadas */
    espere_por(EV_CLIQUE);
    mouse_xy(x, y);

    /* verifique se foi fora do retângulo */
    clicou_fora := (x < X1) || (y < Y1) ||
                   (x > X1 + DX) || (y > Y1 + DY);
    se (não clicou_fora)
      dsn_ret(tela, x - DXY, y - DXY, 2 * DXY, 2 * DXY);
  até (clicou_fora);

  /* desenhe o clique fora com outra cor */
  alt_cor_pincel(tela, COR_VERMELHO);
  dsn_ret(tela, x - DXY, y - DXY, 2 * DXY, 2 * DXY);
fim.
