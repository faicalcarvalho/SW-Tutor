/* Captura movimento do mouse e traça linhas
   indicando a posição corrente */
programa RefCursor;
inclui "gra*";
inclui "evnt*";

const
  X1 = 150; Y1 = 150;
  X2 = 160; Y2 = 160;

var
  x1, y1, x2, y2: inteiro;

início
  /* inicia posição anterior fora da tela */
  x2 := -1; 
  y2 := -1;

  /* desenha retângulo */
  altCorPincel(Tela, COR_BRANCO);
  dsnRet(Tela, X1, Y1, X2, Y2);

  /* novo modo estilo da caneta */
  altEstiloCaneta(Tela, EC_PONTO);
  altTamCaneta(Tela, 3);
  altModoCaneta(Tela, 15);

  para (;;)
  início
    /* captura movimento do mouse */
    esperePor(EV_MOV_MOUSE);
    mouseXY(x1, y1);

    /* termina se dentro do retângulo */
    se ((x1 >= X1) && (x1 <= X2) &&
        (y1 >= Y1) && (y1 <= Y2))
      quebre;

    /* apaga as linhas anteriores */
    altXY(Tela, 0, y2);
    dsnLin(Tela, 1000, y2);
    altXY(Tela, x2, 0);
    dsnLin(Tela, x2, 1000);

    /* desenha as linhas atuais */
    altXY(Tela, 0, y1);
    dsnLin(Tela, 1000, y1);
    altXY(Tela, x1, 0);
    dsnLin(Tela, x1, 1000);

    /* atualiza */
    x2 := x1;
    y2 := y1;
  fim;
  
  /* desenha retângulo indicando fim */
  altCorPincel(Tela, COR_VERMELHO);
  dsnRet(Tela, X1, Y1, X2, Y2);
fim.


